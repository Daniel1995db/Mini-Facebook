<%= form_with model: user, local: true, html: { multipart: true } do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form_edit_page">
    <div class="field">
      <%= form.label 'Profile Photo' %>
      <%= form.file_field :photo, id: :user_photo, class: "form-control" %>
    </div>
    <div class="field">
      <%= form.label 'First Name' %>
      <%= form.text_field :fname, id: :user_fname, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label 'Last Name' %>
      <%= form.text_field :lname, id: :user_lname, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label 'Username' %>
      <%= form.text_field :username, id: :user_username, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label 'Password' %>
      <%= form.password_field :password, id: :user_password, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label 'Position' %>
      <%= form.text_field :position, id: :user_position1, class: "form-control" %>
    </div>

    <div class="actions">

      <%= form.submit 'Update Profile', class: "btn btn-primary btn-block btn-lg" %>
    </div>
  </div
<% end %>
