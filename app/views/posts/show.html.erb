<div class="show_post_page">  
  <p id="notice"><%= notice %></p>

  <p style="background-image: url('<%= @post.user.photo.url %>'); background-position: center; background-size: cover; width: 75px; height: 75px; border-radius: 50%; display: inline-block; margin-bottom: -10px;"></p><h1 style="width: 165px; display: inline-block; margin-left: 15px;"><%= @post.user.username %></h1> <h1 style="width: 300px; display: inline-block;"> recently posted</h1>

  <p style="background-image: url('<%= @post.photo.url %>'); background-position: center; background-size: cover; width: 700px; height: 700px;"></p>

  <div class="config_options">
  <%= link_to 'Edit Post', edit_post_path(@post) %> |
  <%= link_to 'Delete Post', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>

  <p class="message_show_page"><strong><%= @post.message %></strong></p>


  <div class="comments_post_page">
    <p class="comments_post_page_heading"><strong>Comments:</strong></p>
      <% @post.comments.each do |comment| %>
        <div class="photo_with_comment">
            <span style="background-image: url('<%= comment.user.photo.url %>'); width: 30px; height: 30px; background-position: center; background-size: cover; display: inline-block; border-radius: 50%"></span>
              <div class="userCommentName" style="font-weight: bold; width: inherit; display: inline-block; padding-left: 5px;"><%= comment.user.username %>: </div> 
                <%= comment.message %>
              </div>
      <% end %>
    <%= render 'comments/form', comment: Comment.new(post_id: @post.id) %>
    <br>
  </div>


  
  <%= link_to 'Back', posts_path %>
</div>
