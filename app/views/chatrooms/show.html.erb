<p id="notice"><%= notice %></p>



<p>
  <strong>Name:</strong>
  <%= @chatroom.name %>
</p>

<div data-behavior="messages">
  <% @messages.each do |message| %>
    <%= render message %>
  <% end %>
</div>     

<%= form_for [@chatroom, Message.new], remote: true do |f| %>
  <%= f.text_field :body, rows: 1, autofocus: true %>
<% end %>
